// ROZA
function roza(ok){
let last=localStorage.getItem('lastRoza')||0;
let now=Date.now();
if(now-last<24*60*60*1000){alert("24 soat ichida savol berilgan. Keyinroq qaytadan kirish.");return;}
localStorage.setItem('lastRoza',now);
let r=parseInt(localStorage.roza||0);
if(ok){localStorage.roza=r+1;document.getElementById('rozaBox').innerHTML="ğŸŒŸ Alloh roâ€˜zangizni qabul qilsin ğŸ¤²";}
else{document.getElementById('rozaBox').innerHTML="ğŸŒ± Ertaga tutishingizga tilakdoshmiz";}
startTimer();
}
function startTimer(){
let end=Date.now()+24*60*60*1000;
let timerBox=document.getElementById('timerBox');
let interval=setInterval(()=>{
let now=Date.now();let diff=end-now;
if(diff<=0){clearInterval(interval);timerBox.innerText="âœ… 24 soatdan keyin yana keling";}
else{let h=Math.floor(diff/3600000);let m=Math.floor((diff%3600000)/60000);let s=Math.floor((diff%60000)/1000);timerBox.innerText=`âŒ› ${h}h ${m}m ${s}s keyin yana keling`; }
},1000);
}

// TASBEH
let zikrIndex=0,count=0;
