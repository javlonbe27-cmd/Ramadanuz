const allahNames=["AR-RAHMAN","AR-RAHIM","AL-MALIK","AL-QUDDUS","AS-SALAM","AL-MUâ€™MIN","AL-MUHAYMIN","AL-AZIZ","AL-JABBAR","AL-MUTAKABBIR"]; 
function tapTasbeh(){
count++;document.getElementById('count').innerText=count+" / 33";
if(count>=33){count=0;zikrIndex++;
if(zikrIndex<tasbehStages.length){document.getElementById('zikr').innerText=tasbehStages[zikrIndex];}
else{let nameIndex=(zikrIndex-tasbehStages.length)%allahNames.length;document.getElementById('zikr').innerText=allahNames[nameIndex];}}
}
