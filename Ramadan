<script>
    let tg = window.Telegram.WebApp;
    tg.expand();

    // YULDUZLAR YARATISH
    const bg = document.getElementById('stars-bg');
    for(let i=0; i<100; i++) {
        let star = document.createElement('div');
        star.className = 'star';
        let size = Math.random() * 3 + 'px';
        star.style.width = size;
        star.style.height = size;
        star.style.top = Math.random() * 100 + '%';
        star.style.left = Math.random() * 100 + '%';
        star.style.setProperty('--duration', Math.random() * 3 + 2 + 's');
        bg.appendChild(star);
    }

    // RO'ZA TIZIMI
    let rCount = parseInt(localStorage.getItem('ramCount')) || 0;
    function checkRoza(ha) {
        let last = localStorage.getItem('lastClick');
        let now = Date.now();
        if(last && (now - last < 86400000)) {
            tg.showAlert("Kuniga faqat bir marta belgilash mumkin!");
            return;
        }
        localStorage.setItem('lastClick', now);
        if(ha) {
            rCount++;
            localStorage.setItem('ramCount', rCount);
            tg.showAlert("Alloh qabul qilsin! Mukofotingizni ziyoda qilsin. âœ¨");
        } else {
            tg.showAlert("Niyat qiling, ertaga albatta tutasiz InshaAlloh! ðŸ’ª");
        }
        startTimer();
    }

    function startTimer() {
        let last = localStorage.getItem('lastClick');
        if(!last) return;
        document.getElementById('roza-btns').classList.add('hidden');
        document.getElementById('timer-box').classList.remove('hidden');
        setInterval(() => {
            let remain = 86400000 - (Date.now() - last);
            if(remain < 0) {
                document.getElementById('roza-btns').classList.remove('hidden');
                document.getElementById('timer-box').classList.add('hidden');
            } else {
                let h = Math.floor(remain/3600000), m = Math.floor((remain%3600000)/60000), s = Math.floor((remain%60000)/1000);
                document.getElementById('countdown').innerText = `${h}:${m}:${s}`;
            }
        }, 1000);
    }
    startTimer();

    function showTotal() {
        tg.showAlert(`Siz jami ${rCount} kun ro'za tutdingiz. Alloh ibodatlaringizni qabul qilsin!`);
    }

    // TASBEH
    let c = 0, t = parseInt(localStorage.getItem('totalT')) || 0, s = 0;
    document.getElementById('t-total').innerText = t;
    function tap() {
        c++; t++; localStorage.setItem('totalT', t);
        document.getElementById('t-count').innerText = c.toString().padStart(4,'0');
        document.getElementById('t-total').innerText = t;
        tg.HapticFeedback.impactOccurred('medium');
        if(c >= 33 && s < 3) { c = 0; s++; updateZ(); tg.HapticFeedback.notificationOccurred('success'); }
        if(s >= 3) { /* 99 ism mantiqi */ }
    }
    function updateZ() {
        const titles = ["Subhanalloh", "Alhamdulillah", "Allohu Akbar"];
        const subs = ["Alloh pokdir", "Allohga hamd bo'lsin", "Alloh ulug'dir"];
        document.getElementById('zikr-title').innerText = titles[s%3];
        document.getElementById('zikr-sub').innerText = subs[s%3];
        document.getElementById('t-count').innerText = "0000";
    }
    function resetT() { c = 0; s = 0; updateZ(); }

    // NAVIGATSIYA
    function sh(id, el) {
        document.querySelectorAll('.page').forEach(p => p.classList.remove('active-page'));
        document.getElementById(id).classList.add('active-page');
        document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
        el.classList.add('active');
        tg.HapticFeedback.impactOccurred('light');
    }

    // VAQT VA NUSXA
    setInterval(() => {
        let n = new Date();
        document.getElementById('clock').innerText = n.toLocaleTimeString('uz-UZ',{hour12:false});
        document.getElementById('date').innerText = n.toLocaleDateString('uz-UZ',{weekday:'long',day:'numeric',month:'long'});
    }, 1000);

    function copy(t) {
        navigator.clipboard.writeText(t);
        tg.showAlert("Karta raqami nusxalandi!");
    }

    window.onload = startTimer;
</script>
</body>
